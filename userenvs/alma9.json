{
  "workshop": {
    "schema": {
      "version": "2024.08.07"
    }
  },
  "userenv": {
    "name": "alma9",
    "label": "AlmaLinux 9",
    "origin": {
      "image": "quay.io/almalinux/almalinux",
      "tag": "9",
      "build-policy": "missing"
    },
    "properties": {
      "platform": [
        {
          "architecture": "x86_64"
        },
        {
          "architecture": "aarch64"
        }
      ],
      "packages": {
        "type": "rpm",
        "manager": "dnf"
      }
    }
  },
  "requirements": [
    {
      "name": "python3",
      "type": "distro",
      "distro_info": {
        "packages": [
          "python3",
          "python3-pip",
          "python3-devel"
        ]
      }
    },
    {
      "name": "utils",
      "type": "distro",
      "distro_info": {
        "packages": [
          "curl",
          "tar",
          "cpio",
          "gzip",
          "jq",
          "git",
          "cpio",
          "findutils",
          "hostname",
          "iputils",
          "iproute",
          "elfutils-libelf",
          "openssl",
          "xz",
          "libcap",
          "libzstd",
          "numactl"
        ]
      }
    },
    {
      "name": "core-compiling",
      "type": "distro",
      "distro_info": {
        "packages": [
          "diffutils",
          "gcc",
          "libtool",
          "autoconf",
          "automake",
          "make",
          "clang",
          "slang-devel",
          "libbabeltrace",
          "elfutils-libelf-devel",
          "elfutils-debuginfod",
          "elfutils-debuginfod-client-devel",
          "openssl-devel",
          "xz-devel",
          "libzstd-devel",
          "libcap-devel",
          "libnl3-devel",
          "numactl-devel",
          "java-1.8.0-openjdk",
          "libpfm"
        ]
      }
    },
    {
      "name": "core-perl",
      "type": "distro",
      "distro_info": {
        "packages": [
          "perl-App-cpanminus"
        ]
      }
    },
    {
      "name": "core-node",
      "type": "distro",
      "distro_info": {
        "packages": [
          "nodejs"
        ]
      }
    }
  ]
}
