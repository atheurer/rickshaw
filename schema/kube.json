{
    "type": "object",
    "properties": {
        "type": {
            "type": "string",
            "enum": [ "kube" ]
        },
        "controller-ip-address": {
            "type": "string",
            "minLength": 1
        },
        "disable-tools": {
            "oneOf": [
                {
                    "type": "object",
                    "properties": {
                        "all": {
                            "type": "boolean"
                        }
                    },
                    "additionalProperties": false,
                    "required": [
                        "all"
                    ]
                },
                {
                    "type": "object",
                    "minProperties": 1,
                    "properties": {
                        "masters": {
                            "type": "boolean"
                        },
                        "workers": {
                            "type": "boolean"
                        }
                    },
                    "additionalProperties": false
                }
            ]
        },
        "host": {
            "type": "string",
            "minLength": 1
        },
        "namespace": {
            "oneOf": [
                {
                    "type": "object",
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": [
                                "unique"
                            ]
                        },
                        "prefix": {
                            "type": "string",
                            "minLength": 1
                        }
                    },
                    "additionalProperties": false,
                    "required": [
                        "type"
                    ]
                },
                {
                    "type": "object",
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": [
                                "crucible"
                            ]
                        }
                    },
                    "additionalProperties": false,
                    "required": [
                        "type"
                    ]
                },
                {
                    "type": "object",
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": [
                                "custom"
                            ]
                        },
                        "name": {
                            "type": "string",
                            "minLength": 1
                        }
                    },
                    "additionalProperties": false,
                    "required": [
                        "type",
                        "name"
                    ]
                }
            ]
        },
        "user": {
            "type": "string",
            "minLength": 1
        },
        "engines": {
            "type": "object",
            "properties": {
                "client": {
                    "$ref": "#/definitions/number-lists"
                },
                "server": {
                    "$ref": "#/definitions/number-lists"
                }
            },
            "minProperties": 1,
            "additionalProperties": false
        },
        "config": {
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
                "type": "object",
                "properties": {
                    "targets": {
                        "oneOf": [
                            {
                                "type": "string",
                                "enum": [ "default" ]
                            },
                            {
                                "type": "array",
                                "minItems": 1,
                                "uniqueItems": true,
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "role": {
                                            "type": "string",
                                            "enum": [
                                                "client",
                                                "server"
                                            ]
                                        },
                                        "ids": {
                                            "$ref": "#/definitions/number-lists"
                                        }
                                    },
                                    "additionalProperties": false,
                                    "required": [
                                        "role",
                                        "ids"
                                    ]
                                }
                            }
                        ]
                    },
                    "settings": {
                        "$ref": "#/definitions/settings"
                    }
                },
                "additionalProperties": false,
                "required": [
                    "targets",
                    "settings"
                ]
            }            
        }
    },
    "additionalProperties": false,
    "required": [
        "type",
        "host",
        "user",
        "engines"
    ],
    "definitions": {
        "memory": {
            "type": "string",
            "pattern": "^[1-9][0-9]*(Mi|Gi)$"
        },
        "settings": {
            "type": "object",
            "minProperties": 1,
            "properties": {
                "cpu-partitioning": {
                    "type": "boolean"
                },
                "nodeSelector": {
                    "type": "object",
                    "minProperties": 1
                },
                "osruntime": {
                    "type": "string",
                    "enum": [
                        "kata",
                        "pod"
                    ]
                },
                "qos-class": {
                    "type": "string",
                    "enum": [
                        "best-effort",
                        "burstable",
                        "guaranteed"
                    ]
                },
                "resources": {
                    "type": "object",
                    "minProperties": 1,
                    "properties": {
                        "cpu": {
                            "type": "object",
                            "minProperties": 1,
                            "properties": {
                                "limits": {
                                    "type": "number",
                                    "exclusiveMinimum": 0
                                },
                                "requests": {
                                    "type": "number",
                                    "exclusiveMinimum": 0
                                }
                            },
                            "additionalProperties": false
                        },
                        "hugepages": {
                            "type": "object",
                            "properties": {
                                "size": {
                                    "$ref": "#/definitions/memory"
                                },
                                "type": {
                                    "type": "string",
                                    "pattern": "^hugepages-[1-9][0-9]*(Mi|Gi)$"
                                }
                            },
                            "additionalProperties": false,
                            "required": [
                                "count",
                                "size"
                            ]
                        },
                        "memory": {
                            "type": "object",
                            "minProperties": 1,
                            "properties": {
                                "limits": {
                                    "$ref": "#/definitions/memory"
                                },
                                "requests": {
                                    "$ref": "#/definitions/memory"
                                }
                            },
                            "additionalProperties": false
                        }
                    },
                    "additionalProperties": false
                },
                "securityContext": {
                    "type": "object",
                    "minProperties": 1
                },
                "userenv": {
                    "type": "string",
                    "minLength": 1
                }
            },
            "additionalProperties": false
        },
        "number-lists": {
            "anyOf": [
                {
                    "type": "string",
                    "pattern": "^(([1-9][0-9]*)(-[1-9][0-9]*)?)(\\+(([1-9][0-9]*)(-[1-9][0-9]*)?))*$"
                },
                {
                    "type": "integer"
                },
                {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "anyOf": [
                            {
                                "type": "string",
                                "pattern": "^(([1-9][0-9]*)(-[1-9][0-9]*)?)$"
                            },
                            {
                                "type": "integer"
                            }
                        ]
                    }
                }
            ]
        }
    }
}
