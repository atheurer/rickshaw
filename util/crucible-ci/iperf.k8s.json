{
    "benchmarks": [
        {
            "name": "iperf",
            "ids": "1-2",
            "mv-params": {
                "global-options": [
                    {
                        "name": "required",
                        "params": [
			    { "arg": "time", "vals": [ "10" ], "role": "client" },
			    { "arg": "protocol", "vals": [ "tcp" ] },
			    { "arg": "bitrate", "vals": [ "0" ] },
			    { "arg": "ifname", "vals" : [ "default-route" ], "role": "server" }
                        ]
                    }
                ],
                "sets": [
                    {
                        "include": "required",
                        "params": [
			    { "arg": "length", "vals": [ "256", "1024" ] }
                        ]
                    }
                ]
            }
        }
    ],
    "tool-params": [
        {
            "tool": "sysstat"
        },
        {
            "tool": "procstat"
        }
    ],
    "tags": {
        "description": "iperf-k8s-run-file-json"
    },
    "endpoints": [
        {
            "type": "k8s",
            "controller-ip": "CONTROLLER_IP",
            "host": "CI_ENDPOINT_HOST",
            "user": "CI_ENDPOINT_USER",
            "server": "1-2",
            "client": "1-2"
        }
    ],
    "run-params": {
	    "num-samples": 1,
	    "test-order": "s"
    }
}
