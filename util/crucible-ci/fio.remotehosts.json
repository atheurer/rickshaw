{
    "benchmarks": [
        {
            "name": "fio",
            "ids": "1-2",
            "mv-params": {
                "global-options": [
                    {
			"name": "required",
			"params": [
			    { "arg": "clocksource", "vals": [ "gettimeofday" ] },
			    { "arg": "ramp_time", "vals": [ "5s" ] },

			    { "arg": "bs", "vals": [ "4K", "512K" ] },
			    { "arg": "unlink", "vals": [ "1" ] },
			    { "arg": "filename", "vals": [ "/tmp/fio.foo" ] },
			    { "arg": "runtime", "vals": [ "10s" ] },
			    { "arg": "time_based", "vals": [ "1" ] },
			    { "arg": "norandommap", "vals": [ "ON" ] },
			    { "arg": "rw", "vals": [ "randrw" ] },
			    { "arg": "ioengine", "vals": [ "sync" ] },
			    { "arg": "size", "vals": [ "10M" ] }
			]
                    }
                ],
                "sets": [
                    {
			"include": "required"
                    }
                ]
            }
        }
    ],
    "tool-params": [
        {
            "tool": "sysstat"
        },
        {
            "tool": "procstat"
        }
    ],
    "tags": {
        "description": "fio-remotehosts-run-file-json"
    },
    "endpoints": [
	{
	    "type": "remotehosts",
	    "settings": {
		"user": "CI_ENDPOINT_USER",
		"controller-ip-address": "CONTROLLER_IP"
	    },
	    "remotes": [
		{
		    "engines": [
			{ "role": "client", "ids": [ 1 ] }
		    ],
		    "config": {
			"host": "CI_ENDPOINT_HOST",
			"settings": {
			    "osruntime": "podman"
			}
		    }
		},
		{
		    "engines": [
			{ "role": "client", "ids": [ 2 ] }
		    ],
		    "config": {
			"host": "CI_ENDPOINT_HOST",
			"settings": {
			    "osruntime": "chroot"
			}
		    }
		}
	    ]
	}
    ],
    "run-params": {
	    "num-samples": 1,
	    "test-order": "s"
    }
}
