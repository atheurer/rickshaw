{
    "type": "object",
    "properties": {
        "type": {
            "type": "string",
            "enum": [ "k8s" ]
        },
        "controller-ip": {
            "type": "string"
        },
        "host": {
            "type": "string"
        },
        "user": {
            "type": "string"
        },
        "userenv": {
            "type": "string"
        },
        "unique-project": {
            "type": "integer"
        },
        "kubeconfig": {
            "type": "integer"
        },
        "client": {
            "$ref": "#/definitions/number-lists"
        },
        "server": {
            "$ref": "#/definitions/number-lists"
        },
        "config": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "properties": {
                    "targets": {
                        "anyOf": [
                            {
                                "type": "array",
                                "minItems": 1,
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "role": {
                                            "type": "string",
                                            "enum": [ "client", "server" ]
                                        },
                                        "ids": {
                                            "$ref": "#/definitions/number-lists"
                                        }
                                    },
                                    "additionalProperties": false,
                                    "required": [
                                        "role",
                                        "ids"
                                    ]
                                }
                            },
                            {
                                "type": "string",
                                "enum": [ "all", "default" ]
                            }
                        ]
                    },
                    "settings": {
                        "$ref": "#/definitions/settings"
                    }
                },
                "additionalProperties": false,
                "required": [
                    "targets",
                    "settings"
                ]
            }
        }
    },
    "additionalProperties": true,
    "required": [
        "type",
        "host",
        "user"
    ],
    "definitions": {
        "settings": {
            "type": "object",
            "properties": {
                "securityContext": {
                    "type": "object"
                },
                "annotations": {
                    "type": "object"
                },
                "resources": {
                    "type": "object"
                },
                "cpu-partitioning": {
                    "type": "integer"
                }
            },
            "additionalProperties": false
        },
        "number-lists": {
            "anyOf": [
                {
                    "type": "string",
                    "pattern": "^(([1-9][0-9]*)(-[1-9][0-9]*)?)(\\+(([1-9][0-9]*)(-[1-9][0-9]*)?))*$"
                },
                {
                    "type": "integer"
                },
                {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "anyOf": [
                            {
                                "type": "string",
                                "pattern": "^(([1-9][0-9]*)(-[1-9][0-9]*)?)$"
                            },
                            {
                                "type": "integer"
                            }
                        ]
                    }
                }
            ]
        }
   }
}
